<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_material_margin_very_small"
        app:cardElevation="@dimen/default_card_elevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
                
            <android.support.v7.widget.RecyclerView
                android:id="@+id/item_studentdetails_contactinfos_phonenumberlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/item_phonenumber"/>

            <View
                android:id="@+id/item_studentdetails_contactinfos_emaillist_divider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_divider_height"
                android:background="@color/listDividerColor"
                android:layout_marginStart="@dimen/default_material_margin_very_huge"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/item_studentdetails_contactinfos_emaillist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/item_email"/>

            <View
                android:id="@+id/item_studentdetails_contactinfos_addresslist_divider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_divider_height"
                android:background="@color/listDividerColor"
                android:layout_marginStart="@dimen/default_material_margin_very_huge"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/item_studentdetails_contactinfos_addresslist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/item_address"/>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>