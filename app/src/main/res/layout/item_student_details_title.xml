<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_material_margin_very_small"
        app:cardElevation="@dimen/default_card_elevation">

        <TextView
            android:id="@+id/item_studentdetails_title_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_material_margin_small"
            android:gravity="center"
            android:text="Student name"
            android:textSize="@dimen/item_studentdetails_title_textsize"
            android:textStyle="bold"
            android:textColor="@color/black"/>

    </android.support.v7.widget.CardView>

</LinearLayout>